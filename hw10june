public class NegativeElementsCount {
    public static void main(String[] args) {
        int[] array = {5, -2, 0, -8, 10, -3, 7, -1};
        int count = 0;

        for (int i = 0; i < array.length; i++) {
            if (array[i] < 0) {
                count++;
            }
        }

        System.out.println("A number of negative elements " + count);
    }
}
